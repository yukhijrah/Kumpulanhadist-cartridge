<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/doa_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doa Sebelum Makan"
            android:textSize="35dp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/doa_Surah"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الَّلهُمَّ بَارِكْ لَنَا فِيمَا رَزَقْتَنَا، وَقِنَا عَذَابَ النَّارِ"
            android:textSize="30dp"
            android:textStyle="normal"
            android:layout_margin="15dp"/>
        <TextView
            android:id="@+id/doa_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="'Yaa Allah, berkatilah rezeki yang engkau berikan kepada kami, dan peliharalah kami dari siksa api neraka'"
            android:textSize="25dp"
            android:textStyle="italic"
            android:layout_margin="15dp"/>
    </LinearLayout>
</LinearLayout>